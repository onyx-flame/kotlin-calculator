<?xml version="1.0" encoding="utf-8"?>
<resources>

    <item name="simple_button" type="id" />
    <item name="erase_button" type="id" />

    <style name="ioText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="simpleButton">
        <item name="android:id">@id/simple_button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <!--<item name="android:onClick">buttonOnClick</item>-->
    </style>

    <style name="operatorButton" parent="simpleButton">
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="eraseButton" parent="simpleButton">
        <item name="android:id">@id/erase_button</item>
        <item name="android:textColor">@color/red</item>
        <!--item name="android:onClick">eraseOnClick</item-->
    </style>

</resources>