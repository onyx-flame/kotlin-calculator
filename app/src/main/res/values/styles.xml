<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="io_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="simple_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="operator_button" parent="simple_button">
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="erase_button" parent="simple_button">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="scientific_button" parent="operator_button">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/_8ssp</item>
    </style>
</resources>